<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".FaqActivity">

    <RelativeLayout
        android:id="@+id/relativeLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="25dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="25dp"
            android:layout_marginBottom="30dp"
            android:background="@drawable/bg_main"
            android:paddingStart="20dp"
            android:paddingTop="5dp"
            android:paddingEnd="20dp"
            android:paddingBottom="5dp"
            android:text="FAQ"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/ll1"
        android:background="@drawable/bg_red_edge"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp"
        app:layout_constraintTop_toBottomOf="@+id/relativeLayout2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:id="@+id/tvData1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="What is the Purpose of this App?"
            android:textColor="@color/red"
            android:textSize="18sp"
            app:drawableEndCompat="@drawable/baseline_arrow_down_24"
            app:drawableTint="@color/red" />

        <TextView
            android:id="@+id/tvData2"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:justificationMode="inter_word"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/data1"
            android:visibility="gone"
            android:textColor="@color/red"
            android:textSize="15sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll2"
        android:background="@drawable/bg_red_edge"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/ll1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:id="@+id/tvData3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="How do I use the App ?"
            android:textColor="@color/red"
            android:textSize="18sp"
            app:drawableEndCompat="@drawable/baseline_arrow_down_24"
            app:drawableTint="@color/red" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll3"
        android:background="@drawable/bg_red_edge"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="20dp"
        android:padding="10dp"
        app:layout_constraintTop_toBottomOf="@+id/ll2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:id="@+id/tvData4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="What Information is Required to Get Recommendations?"
            android:textColor="@color/red"
            android:textSize="18sp"
            app:drawableEndCompat="@drawable/baseline_arrow_down_24"
            app:drawableTint="@color/red" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll4"
        android:background="@drawable/bg_red_edge"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="20dp"
        android:padding="10dp"
        app:layout_constraintTop_toBottomOf="@+id/ll3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:id="@+id/tvData5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Is the App free ?"
            android:textColor="@color/red"
            android:textSize="18sp"
            app:drawableEndCompat="@drawable/baseline_arrow_down_24"
            app:drawableTint="@color/red" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll5"
        android:background="@drawable/bg_red_edge"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="20dp"
        android:padding="10dp"
        app:layout_constraintTop_toBottomOf="@+id/ll4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:id="@+id/tvData6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="How is User Data Security Ensured ?"
            android:textColor="@color/red"
            android:textSize="18sp"
            app:drawableEndCompat="@drawable/baseline_arrow_down_24"
            app:drawableTint="@color/red" />

    </LinearLayout>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/botNavbar"
        android:layout_width="match_parent"
        android:layout_height="62dp"
        android:layout_marginStart="35dp"
        android:layout_marginEnd="35dp"
        android:layout_marginBottom="15dp"
        android:background="@drawable/bg_main"
        app:itemIconSize="41dp"
        app:labelVisibilityMode="unlabeled"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:menu="@menu/menu_navbar" />

</androidx.constraintlayout.widget.ConstraintLayout>